<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/console"
        android:text="@string/console_placeholder"
        android:background="@color/console_background"
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:padding="@dimen/console_padding"
        android:typeface="monospace"
        android:textSize="@dimen/console_text_size"
        android:textColor="@color/console_text"
        android:singleLine="false"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:inputType="textMultiLine"
        android:layout_height="120dp" />

    <Button
        android:id="@+id/transmit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_states"
        android:gravity="center"
        android:onClick="onClick"
        android:text="IR"
        android:textSize="48sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button1"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/transmit_button"
        android:layout_toLeftOf="@+id/transmit_button"
        android:layout_toStartOf="@+id/transmit_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="10"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/button1"
        android:layout_toRightOf="@+id/button1"
        android:layout_alignRight="@+id/transmit_button"
        android:layout_alignEnd="@+id/transmit_button"
        android:layout_alignBottom="@+id/button1" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/button1"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="287,1833,267,774,278,774,280,809,244,807,245,1823,281,1825,280,771,280,774,279,772,280,785,267,773,279,799,254,1825,281,784,267" />

</RelativeLayout>
